{
  "name": "monorepo-node-react-native-next",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Alcir Junior <junior@cajucomunica.com.br>",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "tests": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:backend": "lerna run test:backend",
    "test:frontend": "lerna run test:frontend",
    "lint": "eslint . --fix --ext ts,tsx",
    "lint:css": "stylelint --fix packages/web/src/**/*",
    "prepare": "rimraf .husky && husky install && npx husky add .husky/pre-commit 'yarn lint-staged' && npx husky add .husky/commit-msg 'npx --no-install commitlint --edit \"$1\"'"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "yarn test"
    ],
    "*.css": "yarn lint:css"
  },
  "devDependencies": {
    "@monorepo/commitlint-config": "*",
    "@monorepo/eslint-config": "*",
    "@monorepo/husky-config": "*",
    "@monorepo/lint-staged-config": "*",
    "@monorepo/stylelint-config": "*",
    "@types/jest": "^27.0.1",
    "jest": "^27.2.0",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
